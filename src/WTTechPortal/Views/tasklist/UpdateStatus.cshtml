@model WTTechPortal.Models.tasklist_updates

@{
    ViewData["Title"] = "Create a New Task";
}

<h2>Create a New Task</h2>

<form asp-action="UpdateStatus">
    <div class="form-horizontal">
        <h4>Task List</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="updatetext" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="updatetext" class="form-control" />
                <span asp-validation-for="updatetext" class="text-danger" />
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="UpdateStatus" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
